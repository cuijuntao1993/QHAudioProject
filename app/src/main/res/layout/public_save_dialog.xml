<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_150"
        android:layout_centerInParent="true"
        android:background="@drawable/save_shape"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/save_dialog_content"
            android:layout_width="fill_parent"
            android:layout_height="270dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:padding="10dp"
            android:scrollbars="vertical" />

        <include layout="@layout/public_list_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/save_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/public_btn_cancle"
                android:gravity="center"
                android:padding="12dp"
                android:text="取消"
                android:textColor="@color/app_color_6c"
                android:textSize="@dimen/text_15" />

            <View
                android:id="@+id/save_dialog_line"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/app_color_F0" />

            <TextView
                android:id="@+id/save_dialog_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/public_btn_submit"
                android:gravity="center"
                android:padding="12dp"
                android:text="保存"
                android:textColor="@color/home_collect_color_n"
                android:textSize="@dimen/text_15" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>