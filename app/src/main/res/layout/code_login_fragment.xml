<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f5f3"
        android:orientation="vertical">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="39dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="手机号码"
            android:textColor="#303030"/>
        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="23dp"
            android:hint="请输入您的手机号"
            android:textColor="#303030"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="39dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="验证码"
                android:textColor="#303030"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_send_code"
                    android:layout_width="91dp"
                    android:text="发送验证码"
                    android:background="@drawable/btn_code_selector"
                    android:layout_marginTop="20dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="30dp"  />
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btn_send_code"
                    android:textSize="17sp"
                    android:maxLength="20"
                    android:gravity="center_vertical"
                    android:layout_marginTop="23dp"
                    android:hint="请输入您的验证码"
                    android:textColor="#303030"/>
            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="39dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"

            android:background="@drawable/btn1_selector"
            android:textColor="@drawable/login_btn1_selector"
            android:text="登录"
            android:layout_height="42dp" />
    </LinearLayout>
    </LinearLayout>
</layout>
